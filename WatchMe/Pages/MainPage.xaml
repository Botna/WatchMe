<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WatchMe.Pages.MainPage"
             Title="MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Fill"
            HorizontalOptions="Fill" >

            <Label Text="Welcome. Click to start Watching." />
            <Button
                Text="Watch Me" 
                AutomationId="Main_RecordingStartBtn"
                SemanticProperties.Hint="Activates the Watch Me recording routine"
                Clicked="OnRecordingPageNav"
                HorizontalOptions="Fill" />

            <Button
                Text="Settings" 
                AutomationId="Main_SettingsBtn"
                SemanticProperties.Hint="Set configurations for WatchMe"
                Clicked="OnSettingsPageNav"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
